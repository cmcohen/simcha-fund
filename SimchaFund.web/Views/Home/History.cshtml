
@using SimchaFund.data
@using SimchaFund.web.Models
@model HistoryViewModel

<div class="container" style="margin-top: 30px;">

    <div class="row">

        <div class="col-md-8">
            <h2 style="text-align:center;">History for @Model.Name</h2>
            <h3 style="text-align:center;">Balance: @Model.Balance.ToString("C")</h3>
            <br />
            <table class="table table-bordered table-striped">
                <tr>
                    <th>Action</th>
                    <th>Date</th>
                    <th>Amount</th>
                </tr>
               @foreach(Transaction t in Model.Transactions)
               {
                   <tr>
                       <td>@t.Action</td>
                       <td>@t.Date</td>
                       <td>@t.Amount</td>
                   </tr>
               }
            </table>
        </div>
    </div>
</div>