
@using SimchaFund.web.Models
@model DepositViewModel

<div>
    <div class="container" style="margin-top: 50px">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h3>Deposit</h3>
                <form action="/home/adddeposit" method="post" class="well">
                    <label>Amount</label>
                    <input type="text" class="form-control" name="amount" placeholder="Deposit Amount" style="margin-bottom: 25px;" />
                    <label>Date</label>
                    <input type="date" class="form-control" name="date" style="margin-bottom: 25px;" />
                    <input type="hidden" class="form-control"  value="@Model.ContributorId" name="contributorId" />
                    <button class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

